{
  "expo": {
    "name": "FinalPoint",
    "slug": "finalpoint-mobile",
    "version": "1.0.12",
    "orientation": "default",
    "scheme": "finalpoint",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "statusBar": {
      "style": "dark",
      "backgroundColor": "#f8fafc",
      "translucent": true
    },
    "extra": {
      "eas": {
        "projectId": "fd837ab0-bf92-40de-8205-9bcf247994ef"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.finalpoint.mobile",
      "buildNumber": "49",
      "icon": "./assets/ios-icons/ItunesArtwork@2x.png",
      "infoPlist": {
        "CFBundleDisplayName": "FinalPoint",
        "NSCameraUsageDescription": "This app uses the camera to allow users to take profile photos.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to allow you to select profile photos.",
        "NSPhotoLibraryAddUsageDescription": "This app saves photos to your photo library for profile pictures.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIStatusBarStyle": "UIStatusBarStyleDefault",
        "UIViewControllerBasedStatusBarAppearance": false
      },
      "googleServicesFile": "./credentials/ios/GoogleService-Info.plist"
    },
    "android": {
      "icon": "./assets/android-icons/playstore-icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/android-icons/playstore-icon.png",
        "backgroundColor": "#ffffff"
      },
      "softwareKeyboardLayoutMode": "pan",
      "enableHermes": true,
      "enableProguardInReleaseBuilds": false,
      "package": "com.finalpoint.mobile",
      "versionCode": 24,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "POST_NOTIFICATIONS"
      ],
      "googleServicesFile": "./google-services.json",
      "intentFilters": [
        {
          "action": "android.intent.action.MAIN",
          "category": [
            "android.intent.category.LAUNCHER"
          ]
        }
      ],
      "allowBackup": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000321"
        }
      ],
      [
        "@react-native-google-signin/google-signin"
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/ic_notification_icon.png",
          "color": "#0f172a",
          "defaultChannel": "default",
          "mode": "production",
          "androidMode": "default",
          "androidCollapsedTitle": "FinalPoint",
          "iosDisplayInForeground": true
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "googleServicesFile": "./google-services.json",
            "enableProguardInReleaseBuilds": false,
            "enableShrinkResourcesInReleaseBuilds": false,
            "namespace": "com.finalpoint.mobile"
          },
          "ios": {
            "googleServicesFile": "./credentials/ios/GoogleService-Info.plist"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "notification": {
      "icon": "./assets/images/ic_notification_icon.png",
      "color": "#0f172a",
      "iosDisplayInForeground": true
    },
    "owner": "danmazzella"
  }
}
